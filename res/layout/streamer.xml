<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/featured"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentRight="true" android:layout_marginLeft="5dip"/>

    <CheckBox
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewers"
        android:layout_alignTop="@+id/featured"
        android:layout_toLeftOf="@+id/featured"
        android:layout_toRightOf="@+id/favorite"
        android:gravity="bottom"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="#ffffff" android:layout_marginLeft="5dip"/>

    <TextView
        android:id="@+id/viewers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/favorite"
        android:layout_alignLeft="@+id/name"
        android:layout_alignRight="@+id/name"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="#999999"/>

</RelativeLayout>